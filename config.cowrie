# Honeyd configuration to proxy SSH to Cowrie honeypot
# Cowrie must be running on localhost:2222

create ssh_honeypot
set ssh_honeypot personality "Linux 2.6.32"
set ssh_honeypot default tcp action reset
set ssh_honeypot default udp action reset

# Proxy TCP port 22 to Cowrie running on localhost:2222
add ssh_honeypot tcp port 22 proxy localhost:2222

# Bind to localhost address
# Use 127.0.0.2 to avoid conflict with services on 127.0.0.1
bind 127.0.0.2 ssh_honeypot
